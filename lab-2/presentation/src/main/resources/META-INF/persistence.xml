<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence https://jakarta.ee/xml/ns/persistence/persistence_3_1.xsd"
             version="3.1">
    <persistence-unit name="cat">
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
        <class>ru.lopa10ko.cats.entities.Cat</class>
        <class>ru.lopa10ko.cats.entities.CatOwner</class>
        <properties>
            <property name="jakarta.persistence.jdbc.driver" value="org.postgresql.Driver"/>
            <property name="jakarta.persistence.jdbc.url" value="jdbc:postgresql://localhost:5432/cats"/>
            <property name="jakarta.persistence.jdbc.user" value="cats"/>
            <property name="jakarta.persistence.jdbc.password" value="cats"/>
            <property name="hibernate.hbm2ddl.auto" value="create"/>
        </properties>
    </persistence-unit>
</persistence>
